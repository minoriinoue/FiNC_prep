<h2>Edit thread</h2>

<% if defined? @message %>
  <p><%=@message%></p>
<% end %>

<%= form_for(@thread, url: thread_path(@thread.id), method: 'PATCH') do |f| %>
  <%= f.hidden_field :my_thread_id, value: @thread.id %>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area(:description, title: "Thread description", size: "24x6") %>
  </div>

  <div class="actions">
    <%= f.submit "Update Thread"%>
  </div>
<% end %>
<p><%= link_to 'Go back to Thread List', threads_path %></p>
